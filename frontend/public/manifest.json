{
	"manifest_version": 3,
	"name": "Fanfiction Downloader",
	"description": "Download fanfiction from Fanfiction.net and Archiveofourown.org",
	"author": "Abhinav Gupta",
	"version": "1.0.0",
	"icons": {
		"16": "image.png",
		"48": "image.png",
		"128": "image.png"
	},
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "image.png",
			"48": "image.png",
			"128": "image.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["activeTab", "storage", "downloads", "tabs", "scripting"],
	"content_scripts": [
		{
			"matches": [
				"https://www.fanfiction.net/*",
				"https://archiveofourown.org/*",
				"https://66614fabac01bd29afbd.appwrite.global/",
				"https://6661df0a82b533cdfb2e.appwrite.global/"
			],
			"js": ["content.js"]
		}
	]
}
