{
	"manifest_version": 3,
	"name": "Fanfiction Downloader",
	"description": "Download fanfiction from FanFiction.Net and Archive of Our Own (AO3) as EPUB or PDF",
	"author": "Abhinav Gupta",
	"version": "3.0.0",
	"icons": {
		"16": "image.png",
		"48": "image.png",
		"128": "image.png"
	},
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "image.png",
			"48": "image.png",
			"128": "image.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["activeTab", "downloads", "tabs", "scripting", "storage"],
	"content_scripts": [
		{
			"matches": [
				"https://www.fanfiction.net/*",
				"https://archiveofourown.org/*"
			],
			"js": ["content.js"]
		}
	]
}
